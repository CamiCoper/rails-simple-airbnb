<!-- app/views/flats/edit.html.erb -->
<h1>Edit Flat</h1>
<%= simple_form_for @flat do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
  </div>

  <div class="form-group">
    <%= f.submit 'Update Flat', class: "btn btn-primary" %>
  </div>
<% end %>
<%= link_to 'Back to flats', flats_path, class: "btn btn-secondary" %>
