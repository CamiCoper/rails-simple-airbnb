<!-- app/views/flats/index.html.erb -->
<h1>All Flats</h1>
<%= link_to 'Add a new flat', new_flat_path, class: "btn btn-primary" %>
<div class="row">
  <% @flats.each do |flat| %>
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title"><%= link_to flat.name, flat %></h5>
          <p class="card-text"><%= flat.description %></p>
          <p class="card-text"><%= flat.address %></p>
          <p class="card-text"><%= flat.price_per_night %> per night</p>
          <p class="card-text"><%= flat.number_of_guests %> guests</p>
          <%= link_to 'Edit', edit_flat_path(flat), class: "btn btn-secondary" %>
          <%= link_to 'Delete', flat, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
